@model IEnumerable<EShopPUA.Models.Category>

<!-- Categories Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5 pb-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 pb-1">
                <div class="cat-item d-flex flex-column border mb-4" style="padding: 30px;">
                    <p class="text-right"> </p>
                    <a asp-controller="Shop" asp-action="CategoryView" asp-route-categoryId="@item.Id" class="cat-img position-relative overflow-hidden mb-3">
                        <img class="img-fluid" src="~/img/categories/@(item.Name).jpg" alt="@item.Name">
                    </a>
                    <h5 class="font-weight-semi-bold m-0">@item.Name</h5>
                </div>
            </div>
        }
    </div>
</div>
<!-- Categories End -->