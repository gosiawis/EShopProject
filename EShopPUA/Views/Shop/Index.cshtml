@model EShopPUA.Controllers.ShopController.ShopViewModel

@{
    ViewData["Title"] = "Shop Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>EShopper - Bootstrap Shop Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Navbar Start -->
    <div class="container-fluid">
        <div class="row border-top px-xl-5">
            <!-- Categories Menu Start -->
            @{
                await Html.RenderPartialAsync("_CategoriesMenuShop", Model.Categories);
            }
            <!-- Categories Menu End -->
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Pretty</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Index">Shop</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Carts" asp-action="ShowCart">Shopping Cart</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Carts" asp-action="ShowCheckout">Checkout</a>
                        </div>
                        <div class="navbar-nav ml-auto py-0">
                            <a href="" class="nav-item nav-link">Login</a>
                            <a href="" class="nav-item nav-link">Register</a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- Navbar End -->
    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 150px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">All products</h1>
            <div class="d-inline-flex">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Index">Shop</a>
            </div>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Shop Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <!-- Shop Sidebar Start -->
            <div class="col-lg-3 col-md-12">
                <form asp-controller="Shop" asp-action="Index">
                    <!-- Price Start -->
                    <div class="border-bottom mb-4 pb-4">
                        <h5 class="font-weight-semi-bold mb-4">Filter by price</h5>

                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" checked id="price-all" name="isAllPricesSelectedString">
                            <label class="custom-control-label" for="price-all">All Price</label>
                            <span class="badge border font-weight-normal text-dark">@Model.CountProducts.TotalProducts</span>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" id="price-1" name="selectedPrices">
                            <label class="custom-control-label" for="price-1">$0 - $20</label>
                            <span class="badge border font-weight-normal text-dark">@Model.CountProducts.PriceProducts(0,20)</span>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" id="price-3" name="selectedPrices">
                            <label class="custom-control-label" for="price-3">$20 - $30</label>
                            <span class="badge border font-weight-normal text-dark">@Model.CountProducts.PriceProducts(20,30)</span>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" id="price-4" name="selectedPrices">
                            <label class="custom-control-label" for="price-4">$30 - $40</label>
                            <span class="badge border font-weight-normal text-dark">@Model.CountProducts.PriceProducts(30,40)</span>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                            <input type="checkbox" class="custom-control-input" id="price-5" name="selectedPrices">
                            <label class="custom-control-label" for="price-5">$40 - $50</label>
                            <span class="badge border font-weight-normal text-dark">@Model.CountProducts.PriceProducts(40,50)</span>
                        </div>

                    </div>
                    <!-- Price End -->
                    <!-- Brand Start -->
                    <div class="border-bottom mb-4 pb-4">
                        <h5 class="font-weight-semi-bold mb-4">Filter by brand</h5>
                        @foreach (var item in Model.Brands)
                        {
                            <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                <input type="checkbox" class="custom-control-input" checked id="brand-@(item.Id)" name="selectedBrands" value="@(item.Id)">
                                <label class="custom-control-label" for="brand-@(item.Id)">@item.Name</label>
                                <span class="badge border font-weight-normal text-dark">@Model.CountProducts.BrandProducts(item.Id)</span>
                            </div>
                        }
                    </div>
                    <!-- Brand End -->
                    <!-- Category Start -->
                    <div class="mb-5">
                        <h5 class="font-weight-semi-bold mb-4">Filter by category</h5>
                        @foreach (var item in Model.Categories)
                        {
                            <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                <input type="checkbox" class="custom-control-input" checked id="category-@(item.Id)" name="selectedCategories" value="@(item.Id)">
                                <label class="custom-control-label" for="category-@(item.Id)">@item.Name</label>
                                <span class="badge border font-weight-normal text-dark">@Model.CountProducts.CategoryProducts(item.Id)</span>
                            </div>
                        }
                    </div>
                    <!-- Category End -->
                    <div>
                        <button class="btn btn-primary btn-block border-0 py-3" type="submit">Filter</button>
                    </div>
                </form>
            </div>
            <!-- Shop Sidebar End -->
            <!-- Product List Start -->
            @{
                await Html.RenderPartialAsync("_ProductsList", Model.Products);
            }
            <!-- Product List End -->
        </div>
    </div>
    <!-- Shop End -->


</body>
</html>

