@model EShopPUA.Controllers.CartsController.OrderViewModel
@using static EShopPUA.Controllers.CartsController

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>EShopper - Bootstrap Shop Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>



    <!-- Navbar Start -->
    <div class="container-fluid">
        <div class="row border-top px-xl-5">
            <!-- Categories Menu Start -->
            @{
                await Html.RenderPartialAsync("_CategoriesMenuShop", Model.Categories);
            }
            <!-- Categories Menu End -->
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Pretty</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Index">Shop</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Carts" asp-action="ShowCart">Shopping Cart</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Carts" asp-action="ShowCheckout">Checkout</a>
                        </div>
                        <div class="navbar-nav ml-auto py-0">
                            <a href="" class="nav-item nav-link">Login</a>
                            <a href="" class="nav-item nav-link">Register</a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- Navbar End -->
    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 200px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Order summary</h1>
            <div class="d-inline-flex">
                <p class="m-0"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></p>
                <p class="m-0"><a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Index">Shop</a></p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Checkout Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <div class="mb-4">
                    <h4 class="font-weight-semi-bold mb-4">Billing Address</h4>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>First Name</label>
                            <p class="font-weight-medium">@Model.ClientDataModel.ClientName</p>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Last Name</label>
                            <p class="font-weight-medium">@Model.ClientDataModel.ClientSurname</p>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-mail</label>
                            <p class="font-weight-medium">@Model.ClientDataModel.ClientEmail</p>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Mobile No</label>
                            <p class="font-weight-medium">@Model.ClientDataModel.ClientPhone</p>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Street name</label>
                            <p class="font-weight-medium">@Model.ClientDataModel.ClientStreet</p>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>House number</label>
                            <p class="font-weight-medium">@Model.ClientDataModel.ClientHouseNumber</p>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Apartment Number</label>
                            <p class="font-weight-medium">@Model.ClientDataModel.ClientApartmentNumber</p>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>City</label>
                            <p class="font-weight-medium">@Model.ClientDataModel.ClientCity</p>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>ZIP Code</label>
                            <p class="font-weight-medium">@Model.ClientDataModel.ClientZipCode</p>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Voivodeship</label>
                            <p class="font-weight-medium">@Model.ClientDataModel.ClientVoivodeship</p>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Order Total</h4>
                    </div>
                    <div class="card-body">
                        <h5 class="font-weight-medium mb-3">Products</h5>
                        @foreach (var item in Model.CartContentModels)
                        {
                            <div class="d-flex justify-content-between">
                                <p>@item.ProductQuantity</p>
                                <p>@item.Product.Name</p>
                                <p>$@(item.Product.Price*item.ProductQuantity)</p>
                            </div>
                        }
                        <hr class="mt-0">
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Subtotal</h6>
                            <h6 class="font-weight-medium">$@Model.CartTotal</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$10</h6>
                        </div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Total</h5>
                            <h5 class="font-weight-bold">$@(Model.CartTotal+10)</h5>
                        </div>
                    </div>
                </div>
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Payment</h4>
                    </div>
                    
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Method</h5>
                            <h5 class="font-weight-normal">@Model.PaymentMethods.Single(p => p.Id == (int)Model.ClientDataModel.PaymentId).Name</h5>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <!-- Checkout End -->


</body>

</html>